@using BallsRUs.Models.Account

@model AccountEditInfoVM

@{
    ViewData["Title"] = "Informations du compte";
}

<h3 id="account-edit-info-title">Modifier vos informations</h3>
<div class="row">
    <div>
        <form asp-action="EditInfo" id="account-edit-info-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4">
                <label asp-for="FirstName" class="account-edit-info-form-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Prénom" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="LastName" class="account-edit-info-form-label"></label>
                <input asp-for="LastName" class="form-control" placeholder="Nom" />
                <span asp-validation-for="LastName" class=" text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Email" class="account-edit-info-form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Courriel" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="PhoneNumber" class="account-edit-info-form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Numéro de téléphone" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-5 mb-0 text-start">
                <input type="submit" value="Sauvegarder" />
            </div>
        </form>
        <div id="account-edit-info-cancel-button-container">
            <a asp-controller="Account" asp-action="Details" id="account-edit-info-cancel-button"><span id="account-edit-info-cancel-button-text">Annuler</span></a>
        </div>
    </div>
</div>
