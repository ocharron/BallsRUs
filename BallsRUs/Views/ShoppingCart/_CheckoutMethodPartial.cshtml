@using BallsRUs.Models.Account;

@model LogInVM

<div class="modal" id="shopping-cart-checkout-method-modal" tabindex="-1" role="dialog" aria-labelledby="checkout-method-modal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div id="shopping-cart-checkout-method-modal-container" class="modal-content">
            <div id="shopping-cart-checkout-method-modal-header" class="modal-header">
                <h5 class="modal-title" id="shopping-cart-checkout-method-modal-title">Compléter la commande</h5>
                <button id="shopping-cart-checkout-method-modal-header-close-button" type="button" data-dismiss="modal" aria-label="Close">
                    <img src="~/img/plus.svg" id="shopping-cart-checkout-method-modal-header-close-image" />
                </button>
            </div>
            <div class="modal-body">
                <div class="col-12 justify-content-center d-flex mb-3">
                    <h2 id="shopping-cart-checkout-method-modal-body-title">Connectez-vous</h2>
                </div>
                <form asp-action="LogIn" asp-controller="Account" asp-route-redirectToCheckout="True" id="shopping-cart-checkout-method-modal-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="NomUtilisateur" class="form-control" placeholder="Courriel" />
                        <span asp-validation-for="NomUtilisateur" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="MotDePasse" class="form-control" placeholder="Mot de passe" />
                        <span asp-validation-for="MotDePasse" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 mb-1 text-start">
                        <input type="submit" value="Se connecter" />
                    </div>
                </form>
                <div class="col-12 justify-content-center d-flex">
                    <a id="shopping-cart-checkout-method-modal-register-link" class="shopping-cart-checkout-method-modal-link" asp-controller="Account" asp-action="Register">
                        <span>Créer un compte</span>
                    </a>
                </div>
            </div>
            <div id="shopping-cart-checkout-method-modal-footer" class="modal-footer">
                <div class="row w-100">
                    <div class="col-7 align-items-center d-flex ps-4">
                        <a class="shopping-cart-checkout-method-modal-link" asp-controller="Checkout" asp-action="Information">
                            <span id="shopping-cart-checkout-method-modal-anonym-text">Continuer en tant qu'invité</span>
                        </a>
                    </div>
                    <div class="col-5 justify-content-end d-flex">
                        <button id="shopping-cart-checkout-method-modal-cancel-button" data-dismiss="modal">Retour</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>